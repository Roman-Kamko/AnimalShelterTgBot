<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="Kamko">
        <preConditions>
            <not>
                <tableExists tableName="animal"/>
            </not>
        </preConditions>
        <createTable tableName="animal">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="is_healthy" type="BOOLEAN" defaultValue="TRUE">
                <constraints nullable="false"/>
            </column>
            <column name="animal_type" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="shelter_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="animal"/>
        </rollback>
    </changeSet>

    <changeSet id="2" author="Kamko">
        <preConditions>
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_ANIMAL_USERS_ID"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="animal"
                                 baseColumnNames="user_id"
                                 constraintName="FK_ANIMAL_USERS_ID"
                                 referencedTableName="users"
                                 referencedColumnNames="chat_id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="FK_ANIMAL_USERS_ID"/>
        </rollback>
    </changeSet>

    <changeSet id="3" author="Kamko">
        <preConditions>
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_ANIMAL_SHELTER_ID"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="animal"
                                 baseColumnNames="shelter_id"
                                 constraintName="FK_ANIMAL_SHELTER_ID"
                                 referencedTableName="shelter"
                                 referencedColumnNames="id"
                                 deleteCascade="true"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="FK_ANIMAL_SHELTER_ID"/>
        </rollback>
    </changeSet>

</databaseChangeLog>